generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
//      MODEL: User
// =====================

model User {
  id                Int     @id @default(autoincrement())
  //firstName       String
  //lastName        String
  fullName          String
  email             String
  byuNetId          String  @unique
  //role            String
  isSecretary       Boolean @default(false)

  // Orders requested by this user (students)
  ordersRequested   Order[] @relation("OrderRequester")

  // Orders purchased by this user (secretary)
  ordersPurchased   Order[] @relation("OrderPurchaser")
}

// =====================
//      MODEL: Item
// =====================

model Item {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int
  status   String
  link     String?
  file     String?
  orderId  Int
  order    Order  @relation(fields: [orderId], references: [id])
}

// =====================
//      MODEL: Order
// =====================

model Order {
  id                 Int     @id @default(autoincrement())
  requestDate        DateTime
  items              Item[]
  vendor             String
  shippingPreference String?
  professorId        Int
  professor          Professors   @relation(fields: [professorId], references: [id])
  purpose            String
  workTag            String
  spendCategoryId    Int
  spendCategory      SpendCategory @relation(fields: [spendCategoryId], references: [id])
  tax                Float?
  total              Float?

  // Student who requested the order 
  userId             Int
  user               User   @relation("OrderRequester", fields: [userId], references: [id])

  // Secretary who purchased the order
  purchasedById      Int?
  purchasedBy        User? @relation("OrderPurchaser", fields: [purchasedById], references: [id])

  lineMemoOptionId   Int?
  lineMemoOption     LineMemoOption? @relation(fields: [lineMemoOptionId], references: [id])
  creditCard         Boolean?
  purchaseDate       DateTime?
  receipt            String[] @default([])
  status             String
  comment            String?
  cartLink           String?
  adminComment       String?
}

// ==========================
//   MODEL: SpendCategory
// ==========================

model SpendCategory {
  id                Int     @id @default(autoincrement())
  code              String  @unique
  description       String
  visibleToStudents Boolean @default(true)
  orders       Order[]
}

// ==========================
//   MODEL: LineMemoOption
// ==========================

model LineMemoOption {
  id          Int @id
  description String
  orders      Order[]
}

// ==========================
//   MODEL: Professors
// ==========================

model Professors {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  title     String?
  email     String?
  orders    Order[]
}
